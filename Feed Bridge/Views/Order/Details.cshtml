@model Feed_Bridge.Models.Entities.Order

<div class="container mt-5">
    <h2 class="text-center mb-4">📝 تفاصيل الطلب رقم @Model.Id</h2>

    <p><strong>الحالة:</strong> @Model.Status</p>
    <p><strong>تاريخ الإنشاء:</strong> @Model.CreatedAt.ToString("yyyy/MM/dd HH:mm")</p>

    <table class="table table-striped text-center mt-4">
        <thead class="table-dark">
            <tr>
                <th>الصورة</th>
                <th>اسم المنتج</th>
                <th>الكمية</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderProducts)
            {
                <tr>
                    <td>
                        <img src="~/uploads/@(item.Product?.ImgURL ?? "img.png")"
                             alt="@item.Product?.Name"
                             style="width:70px;height:70px;" />
                    </td>
                    <td>@item.Product?.Name</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
            ⬅️ عودة للمنتجات
        </a>
        <a asp-controller="Order" asp-action="History" class="btn btn-secondary">
            📜 عرض طلباتي
        </a>
    </div>
</div>
