@model IEnumerable<Feed_Bridge.Models.Entities.Donation>

@{
    ViewData["Title"] = "التبرعات";
    ViewData["ActivePage"] = "Donate";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">قائمة التبرعات</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>الاسم</th>
            <th>تاريخ الانتهاء</th>
            <th>الكمية</th>
            <th>الوصف</th>
            <th>الحذف أو التعديل</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var donation in Model)
        {
            <tr>
                <td>@donation.Name</td>
                <td>@donation.ExpirDate.ToString("yyyy/MM/dd")</td>
                <td>@donation.Quantity</td>
                <td>@donation.Description</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@donation.Id" method="post">
                        <button type="submit" class="btn btn-danger">حذف</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
