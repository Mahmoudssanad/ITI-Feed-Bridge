@model List<Feed_Bridge.Models.Entities.Donation>

@{
    ViewData["Title"] = "كل المشتركين";
    ViewData["ActivePage"] = "AllUsers"; // Highlight في sidebar
    Layout = "~/Views/Shared/Dashboard.cshtml"; // ربط الـ dashboard layout
}

<div class="allusers-page">
    <h2>كل المشتركين</h2>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>الاسم</th>
                <th>العنوان</th>
                <th>الكمية</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Name</td>
                    <td>@user.Address</td>
                    <td>@user.Quantity</td>
                </tr>
            }
        </tbody>
    </table>
</div>
