@model Feed_Bridge.ViewModel.ResetPasswordViewModel

<form method="post" asp-action="ChangePassword" asp-controller="UserController">
<div class="container otp-container">
    <div class="otp-form-card">
        <h2 class="form-header">أدخل كلمة المرور الجديدة</h2>
        <p>الرجاء إدخال كلمة المرور الجديدة وتأكيدها أدناه.</p>
        <form action="index.html" class="otp-form">
            <div class="form-control">
                <label for="new-password">كلمة المرور الجديدة</label>
                <input type="password" id="Password" name="Password" required />
            </div>
            <div class="form-control">
                <label for="confirm-password">تأكيد كلمة المرور</label>
                    <input type="password" id="ConfirmPassword" name="ConfirmPassword" required />
            </div>
            <button type="submit" class="btn">تغيير كلمة المرور</button>
        </form>
    </div>
</div>
</form>

