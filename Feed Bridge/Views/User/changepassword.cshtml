@model Feed_Bridge.ViewModel.ChangePasswordViewModel

<div class="container">
    <h2>تغيير كلمة المرور</h2>

    <form asp-action="ChangePassword" asp-controller="User" method="post">
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label for="CurrentPassword">كلمة المرور الحالية</label>
            <input asp-for="CurrentPassword" type="password" class="form-control" required />
            <span asp-validation-for="CurrentPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="NewPassword">كلمة المرور الجديدة</label>
            <input asp-for="Password" type="password" class="form-control" required />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="ConfirmPassword">تأكيد كلمة المرور</label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" required />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">تغيير</button>
    </form>
</div>
