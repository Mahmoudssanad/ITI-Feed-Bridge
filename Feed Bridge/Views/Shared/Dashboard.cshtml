@{
    ViewData["Title"] = "Admin Dashboard";
}
<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Google fonts icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>FeedBridge</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <!-- Dashboard Header -->
    <header>
        <div class="header-logo">
            <img src="imgs/logo.png" alt="logo" class="logo-img" />
            <p>FeedBridge</p>
        </div>
        <div class="header-icons">
            <div class="notifications-container">
                <span class="material-symbols-outlined notifications-icon"> notifications </span>
                <div class="notifications-box">
                    <h3>الاشعارات</h3>
                    <ul>
                        <li>طلبك وصل!</li>
                        <li>مرحبا بيك في منصتنا Feed Bridge</li>
                        <li>
                            Your delivery is on its way. Lorem ipsum dolor sit amet consectetur, adipisicing elit. Ad
                            quasi aperiam id unde at consequuntur, voluptates ducimus sint, saepe odit nemo quae beatae assumenda
                            officiis itaque laborum cupiditate, dignissimos aliquid!
                        </li>
                    </ul>
                </div>
            </div>
            <span class="material-symbols-outlined"> account_circle </span>
        </div>
    </header>
    <div class="page">
        <div class="sidebar">
            <ul>
                <li class="@(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">
                    <a href="dashboard.html">
                        <span class="material-symbols-outlined"> settings </span>
                        <p style="display: none;">Dashboard</p>
                        <p>لوحة التحكم</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Orders" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> add_circle </span>
                        <p style="display: none;">Orders</p>
                        <p>الطلبات</p>
                    </a>
                </li >
                <li class="@(ViewData["ActivePage"] as string == "Reports" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> mail </span>
                        <p style="display: none;">Reports</p>
                        <p>التقارير</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Products" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> star </span>
                        <p style="display: none;">Products</p>
                        <p>المنتجات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Donors" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> favorite </span>
                        <p style="display: none;">Donors</p>
                        <p>التبرعات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Delivery" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> local_shipping </span>
                        <p style="display: none;">Delivery</p>
                        <p>التوصيل</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "AllUsers" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> groups </span>
                        <p style="display: none;">AllUsers</p>
                        <p>كل المشتركين</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "AllParteners" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> groups </span>
                        <p style="display: none;">AllParteners</p>
                        <p>كل الشراكات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "HomeController" ? "active" : "")">
                    <a href="#">
                        <span class="material-symbols-outlined"> groups </span>
                        <p style="display: none;">HomeControl</p>
                        <p>التحكم في الواجهه </p>
                    </a>
                </li>
                <li>
                    <a href="#">
                        <span style="color: #ff3b30;" class="material-symbols-outlined"> logout </span>
                        <p class="logout">تسجيل الخروج</p>
                    </a>
                </li>
            </ul>

        </div>
        <div class="content-page">
			@RenderBody()
            
        </div>
        <script src="~/js/maindash.js"></script>
</body>

</html>