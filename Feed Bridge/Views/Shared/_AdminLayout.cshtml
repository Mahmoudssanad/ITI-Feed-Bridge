@*
    Admin Layout
    - ثابت لكل صفحات الداشبورد
    - بيحتوي على الـ Sidebar + Header
    - محتوى الصفحة بيتعرض جوه @RenderBody()
*@
<!DOCTYPE html>
<html lang="en" dir="rtl">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Google fonts icons -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <title>@ViewData["Title"] - FeedBridge Admin</title>
    <link rel="stylesheet" href="~/css/style.css" />
</head>

<body>
    <!-- Dashboard Header -->
    <header>
        <div class="header-logo">
            <img src="~/imgs/logo.png" alt="logo" class="logo-img" />
            <p>FeedBridge</p>
        </div>
        <div class="header-icons">
            <div class="notifications-container">
                <span class="material-symbols-outlined notifications-icon"> notifications </span>
                <div class="notifications-box">
                    <h3>الاشعارات</h3>
                    <ul>
                        <li>طلبك وصل!</li>
                        <li>مرحبا بيك في منصتنا Feed Bridge</li>
                        <li>
                            Your delivery is on its way. Lorem ipsum dolor sit amet consectetur, adipisicing elit.
                        </li>
                    </ul>
                </div>
            </div>
            <span class="material-symbols-outlined"> account_circle </span>
        </div>
    </header>

    <div class="page">
        <!-- Sidebar -->
        <div class="sidebar">
            <ul>
                <li class="@(ViewData["ActivePage"] as string == "Dashboard" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Dashboard">
                        <span class="material-symbols-outlined"> settings </span>
                        <p>لوحة التحكم</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Orders" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Orders">
                        <span class="material-symbols-outlined"> add_circle </span>
                        <p>الطلبات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Reports" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Reports">
                        <span class="material-symbols-outlined"> mail </span>
                        <p>التقارير</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Products" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Products">
                        <span class="material-symbols-outlined"> star </span>
                        <p>المنتجات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Donors" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Donate">
                        <span class="material-symbols-outlined"> favorite </span>
                        <p>التبرعات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "Delivery" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="Delivery">
                        <span class="material-symbols-outlined"> local_shipping </span>
                        <p>التوصيل</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "AllUsers" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="AllUsers">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>كل المشتركين</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "AllParteners" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="AllParteners">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>كل الشراكات</p>
                    </a>
                </li>
                <li class="@(ViewData["ActivePage"] as string == "HomeControl" ? "active" : "")">
                    <a asp-controller="Admin" asp-action="HomeControl">
                        <span class="material-symbols-outlined"> groups </span>
                        <p>التحكم في الواجهه </p>
                    </a>
                </li>
                <li>
                    <a asp-controller="Account" asp-action="Logout">
                        <span style="color: #ff3b30;" class="material-symbols-outlined"> logout </span>
                        <p class="logout">تسجيل الخروج</p>
                    </a>
                </li>
            </ul>
        </div>

        <!-- Page Content -->
        <div class="content-page">
            @RenderBody()
        </div>
    </div>

    <script src="~/js/maindash.js"></script>
</body>
</html>
